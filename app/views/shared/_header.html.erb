<% style_color = "btn btn-ghost" %>
<div class="navbar bg-base-100 mb-3">
  <div class="flex-1">
    <%= link_to root_path, class: 'btn btn-ghost text-xl', data: { action: "click->loading#show" } do %>
      <%= image_tag "apple-touch-icon.png", alt: "NighTrip", class: "h-10 w-auto align-middle" %>
      <span>NighTrip</span>
    <% end %>
  </div>
  <div class="flex-none">
    <ul class="menu menu-horizontal px-1">
      <li>
        <%= link_to guide_path, class: style_color, data: { action: "click->loading#show" } do %>
          <%= image_tag "icons/info.png", alt: "使いかたページへ" %>
          <%= t('header.guide') %>
        <% end %>
      </li>
      <% if user_signed_in? %>
        <li>
          <%= link_to new_spot_path, class: style_color, data: { action: "click->loading#show" } do %>
            <%= image_tag "icons/add.png", alt: "新規投稿ページへ" %>
            <%= t('header.create_spot') %>
          <% end %>
        </li>
      <% end %>
      <li>
        <%= link_to ranking_spots_path, class: style_color, data: { action: "click->loading#show" } do %>
          <%= image_tag "icons/ranking.png", alt: "ランキングページへ" %>
          <%= t('header.ranking') %>
        <% end %>
      </li>
      <% if user_signed_in? %>
        <li>
          <%= link_to bookmarks_path, class: style_color, data: { action: "click->loading#show" } do %>
            <%= image_tag "icons/star.png", alt: "お気に入りページへ" %>
            <%= t('header.bookmark_index') %>
          <% end %>
        </li>
        <li>
          <%= link_to profile_path, class: style_color, data: { action: "click->loading#show" } do %>
            <%= image_tag "icons/account_circle.png", alt: "ユーザー情報編集ページへ" %>
            <%= t('header.profile') %>
          <% end %>
        </li>
      <% end %>
      <% if user_signed_in? %>
        <li>
          <%= link_to destroy_user_session_path, data: { turbo_method: :delete, action: "click->loading#show" }, class: "btn btn-error" do %>
            <%= image_tag "icons/logout.png", alt: "ログアウトする" %>
            <%= t('header.logout') %>
          <% end %>
        </li>
      <% else %>
        <li>
          <%= link_to new_user_session_path, class: "btn btn-primary", data: { action: "click->loading#show" } do %>
            <%= image_tag "icons/login.png", alt: "ログインページへ" %>
            <%= t('header.login') %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
